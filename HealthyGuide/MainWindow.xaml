<Window x:Class="HealthyGuide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="HealthyGuideDB" Height="450" Width="800" Background="#333333">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Background" Value="#333333"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="tableList" Grid.Column="0" Margin="5" SelectionChanged="TableList_SelectionChanged" Foreground="White" Background="#1E1E1C"/>

        <DataGrid x:Name="dataGrid" Margin="5" Grid.Column="1" Background="#1E1E1C">
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Background" Value="#4C4A4A" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="#4C4A4A" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
            <Button Content="+" Click="AddButton_Click" Style="{StaticResource ButtonStyle}" Foreground="White"/>
            <Button Content="-" Click="DeleteButton_Click" Style="{StaticResource ButtonStyle}" Foreground="White"/>
            <Button Content="&#xE117;" FontFamily="Segoe MDL2 Assets" Click="UpdateButton_Click" Style="{StaticResource ButtonStyle}" Foreground="White"/>
            <Button Content="&#xE71C;" FontFamily="Segoe MDL2 Assets" Click="FilterButton_Click" Style="{StaticResource ButtonStyle}" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>